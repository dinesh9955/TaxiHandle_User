<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/topLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header_with_back"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_headermain">
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_mainSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@color/colorWhite"
                android:paddingVertical="@dimen/_10sdp"
                android:onClick="onClick">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/group"
                    app:civ_border_color="@color/colorDisableText"
                    app:civ_border_width="@dimen/_1sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <cabuser.com.rydz.util.common.CustomFontTextView
                    android:id="@+id/tv_profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normal_text_size"
                    app:fontName="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginStart="@dimen/_75sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toTopOf="parent" />

                <cabuser.com.rydz.util.common.CustomFontTextView
                    android:id="@+id/tv_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_text_size"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/_75sdp"
                   android:ellipsize="end"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintStart_toEndOf="@id/iv_profile"
                    app:layout_constraintStart_toStartOf="@id/tv_profileName"
                    app:layout_constraintTop_toBottomOf="@id/tv_profileName" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/arrow_next"
                    app:layout_constraintBottom_toTopOf="@+id/tv_phoneNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profileName" />
            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_mainSetting">

                <cabuser.com.rydz.util.common.CustomFontTextView
                    android:id="@+id/tv_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booking_notifications"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/smaller_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/switch_notification"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/off"
                    app:layout_constraintBottom_toBottomOf="@id/tv_notifications"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_notifications"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_mainSetting">

                <cabuser.com.rydz.util.common.CustomFontTextView
                    android:id="@+id/tv_broadCastnotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/broadcast_notifications"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/smaller_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/switch_broadcastnotification"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/off"
                    app:layout_constraintBottom_toBottomOf="@id/tv_broadCastnotifications"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_broadCastnotifications"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/arrow_next"
                android:onClick="onClick"
                android:padding="@dimen/_10sdp"
                android:text="@string/privacy_policy"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />
            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/arrow_next"
                android:onClick="onClick"
                android:padding="@dimen/_10sdp"
                android:text="@string/contact_us"
                android:visibility="gone"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />


            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/arrow_next"
                android:onClick="onClick"
                android:padding="@dimen/_10sdp"
                android:text="@string/about"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />

            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/arrow_next"
                android:onClick="onClick"
                android:padding="@dimen/_10sdp"
                android:text="@string/faq"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />

            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/arrow_next"
                android:onClick="onClick"
                android:padding="@dimen/_10sdp"
                android:text="@string/terms"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />

            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_signOut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:onClick="onClick"
                android:padding="@dimen/_10sdp"
                android:text="@string/sign_out"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>