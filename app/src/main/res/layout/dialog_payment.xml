<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/_150sdp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/drawable_whitecorner"
    android:padding="@dimen/_4sdp"
    android:minWidth="@dimen/_280sdp">


        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_fare_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center"
            android:text="@string/fare_summary"
            android:layout_margin="@dimen/_5sdp"
        />


        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_fare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big_text_size"
            android:gravity="center"
            app:fontName="bold"
            android:text="$  45"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"/>


    <cabuser.com.rydz.util.common.CustomFontTextView
        android:id="@+id/tv_pay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/big_text_size"
        android:gravity="center"
android:padding="@dimen/_10sdp"        android:text="Pay"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"/>




    </LinearLayout>



