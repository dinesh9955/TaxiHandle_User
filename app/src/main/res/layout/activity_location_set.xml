<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="cabuser.com.rydz.ui.home.LocationViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="56dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_headermain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:onClick="onClick"
                    android:src="@drawable/bg_greyarrow"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <cabuser.com.rydz.util.common.CustomFontTextView
                    android:id="@+id/tv_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:onClick="onClick"
                    android:text="@string/done"
                    android:visibility="gone"
                    android:textColor="@color/colorDisableText"
                    android:textSize="@dimen/_12sdp"
                    android:enabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/_1sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_back">

                    <ImageView
                        android:id="@+id/iv_src"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/green_oval"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_dashline"
                        android:layout_width="@dimen/_4sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:visibility="gone"
                        android:src="@drawable/dash_line"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_src" />

                    <ImageView
                        android:id="@+id/iv_des"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:visibility="gone"
                        android:src="@drawable/red_rectangle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_dashline"/>

                    <cabuser.com.rydz.util.common.CustomFontTextView
                        android:id="@+id/tv_timeSlot"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1.8"
                        android:background="@color/colorBackground"
                        android:ellipsize="end"
                        android:hint=""
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:layout_constraintBottom_toTopOf="@id/ll_src"
                        android:visibility="visible"
                        android:focusable="true"
                        android:singleLine="true"
                        android:padding="@dimen/_5sdp"

                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/colorBlack"
                        android:textCursorDrawable="@drawable/drawable_cursor"
                        android:textSize="@dimen/smaller_text_size"
                        app:fontName="bold"/>

                    <LinearLayout
                        android:id="@+id/ll_src"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBackground"
                        android:gravity="center_vertical"
                        android:weightSum="2"
                        android:focusable="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintLeft_toRightOf="@id/iv_src"
                        app:layout_constraintTop_toBottomOf="@id/tv_timeSlot">

                        <cabuser.com.rydz.util.common.CustomAutoCompleteTextView
                            android:id="@+id/edt_source"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1.8"
                            android:background="@color/colorBackground"
                            android:ellipsize="end"
                            android:hint="@string/source_hint"
                            android:padding="@dimen/_5sdp"
                            android:focusable="true"
                            android:singleLine="true"
                            android:text="@={viewmodel.source}"
                            android:textColor="@color/colorBlack"
                            android:textCursorDrawable="@drawable/drawable_cursor"
                            android:textSize="@dimen/smaller_text_size"
                            app:fontName="bold"/>

                        <ImageView
                            android:id="@+id/iv_clearsrc"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorBackground"
                            android:src="@drawable/close"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"

                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/colorBackground"
                        android:gravity="center_vertical"
                        android:weightSum="2"
                        app:layout_constraintLeft_toRightOf="@id/iv_des"
                        app:layout_constraintTop_toBottomOf="@id/ll_src">

                        <cabuser.com.rydz.util.common.CustomAutoCompleteTextView
                            android:id="@+id/edt_destination"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1.8"
                            android:background="@color/colorBackground"
                            android:ellipsize="end"
                            android:hint="@string/destination_hint"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:text="@={viewmodel.destination}"
                            android:textColor="@color/colorBlack"
                            android:textCursorDrawable="@drawable/drawable_cursor"
                            android:textSize="@dimen/smaller_text_size"
                            app:fontName="bold"/>

                        <ImageView
                            android:id="@+id/iv_cleardesc"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_marginVertical="@dimen/_2sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorBackground"
                            android:src="@drawable/close"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <cabuser.com.rydz.util.common.CustomFontTextView
                        android:id="@+id/tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="15dp"
                        android:text="+"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/bold_text_size"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_src" />

                    <ImageView
                        android:id="@+id/iv_dashline2"
                        android:layout_width="@dimen/_4sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_line"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_des" />

                    <ImageView
                        android:id="@+id/iv_des2"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/red_rectangle"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_dashline2" />

                    <cabuser.com.rydz.util.common.CustomAutoCompleteTextView
                        android:id="@+id/edt_destination2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorBackground"
                        android:ellipsize="end"
                        android:hint="@string/destination_hint"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="@={viewmodel.destination}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/smaller_text_size"
                        android:visibility="gone"
                        app:fontName="bold"
                        app:layout_constraintLeft_toRightOf="@+id/iv_src"
                        app:layout_constraintTop_toBottomOf="@+id/ll_destinations" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:indeterminate="true"
            android:visibility="gone"/>

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_pinloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_blackpin"
            android:drawablePadding="@dimen/_10sdp"
            android:onClick="onClick"
            android:paddingHorizontal="@dimen/_25sdp"
            android:visibility="gone"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/setpin"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:background="@color/colorWhite"
            app:fontName="bold">

        </cabuser.com.rydz.util.common.CustomFontTextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</layout>