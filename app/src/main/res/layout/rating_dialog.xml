<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/drawable_roundedwhite"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_driverPhoto"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/group"
            app:civ_border_color="@color/colorDisableText"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <!-- android:text="@string/you_rated_sid"-->
        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_driverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smaller_text_size"
            app:fontName="bold"

            />
        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_driverRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smallest_text_size"
            android:drawableRight="@drawable/fill_star"
            android:drawablePadding="@dimen/_5sdp"
            app:fontName="bold"
            />

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_rideDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smallest_text_size"
            app:fontName="bold"
            />

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_rideCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:textSize="55.2sp"
            />



        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="5.0" android:theme="@style/RatingBar"
            android:stepSize="1.0"
            />


        <cabuser.com.rydz.util.common.CustomFontEditText
            android:id="@+id/edt_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addreview"
            android:background="@color/colorWhite"
            android:textSize="12sp"
            android:imeOptions="actionDone"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:singleLine="true"
            />



        <View
            android:id="@+id/view_payment"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorDisableText"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <cabuser.com.rydz.util.common.CustomButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/drawable_gradient"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/submit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/smaller_text_size"
            app:fontName="bold"
            android:textAllCaps="false"
            />


        <cabuser.com.rydz.util.common.CustomButton
            android:id="@+id/btn_skipRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorDisableText"
            android:textSize="12sp"
            android:text="@string/skip"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            />



    </LinearLayout>
</LinearLayout>
