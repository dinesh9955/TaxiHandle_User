<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <cabuser.com.rydz.util.common.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="@string/schedule_a_ride"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/normal_text_size"
        app:fontName="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDisableText" />

    <cabuser.com.rydz.util.common.CustomFontTextView
        android:id="@+id/tv_schedule_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        app:fontName="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDisableText" />

    <cabuser.com.rydz.util.common.CustomFontTextView
        android:id="@+id/tv_schedule_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        app:fontName="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDisableText" />

    <LinearLayout
        android:id="@+id/ll_schedule_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@drawable/drawable_grey_rounded"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/smaller_text_size"
            app:fontName="bold" />

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_scheduleconfirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/drawable_roundedblack"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/smaller_text_size"
            app:fontName="bold" />

    </LinearLayout>


</LinearLayout>