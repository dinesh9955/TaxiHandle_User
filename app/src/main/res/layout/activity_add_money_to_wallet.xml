<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <include
        layout="@layout/header_with_back"/>


    <cabuser.com.rydz.util.common.CustomFontTextView
        android:id="@+id/tv_addwalletAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:layout_below="@id/cl_headermain"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/_160sdp"
        android:layout_below="@id/tv_addwalletAmount"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

         app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        android:scrollbarThumbVertical="@color/test"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/_5sdp"

        android:layout_marginHorizontal="@dimen/_20sdp"

        />
    </RelativeLayout>

    <cabuser.com.rydz.util.common.CustomFontTextView
        android:id="@+id/tv_addpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/add_payment_method"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/smaller_text_size"
        android:onClick="onClick"
        android:layout_marginTop="@dimen/_5sdp"
      android:layout_below="@id/rl_card"
        />
    <View
        android:id="@+id/view_card"
        android:layout_width="@dimen/_150sdp"
   android:layout_below="@+id/tv_addpayment"
        android:background="@color/colorBlue"

        android:layout_marginTop="@dimen/_2sdp"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/_1sdp"/>


</RelativeLayout>