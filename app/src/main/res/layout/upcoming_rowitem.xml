<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:drawableLeft="@drawable/calendar"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_timeDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:drawableLeft="@drawable/clock"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintStart_toEndOf="@id/tv_day"
            app:layout_constraintTop_toTopOf="@id/tv_day" />

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_priceRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/price_range"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintStart_toStartOf="@id/tv_day"
            app:layout_constraintTop_toBottomOf="@id/tv_day" />

        <cabuser.com.rydz.util.common.CustomFontTextView
            android:id="@+id/tv_expectedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintStart_toEndOf="@+id/tv_priceRange"
            app:layout_constraintTop_toBottomOf="@id/tv_timeDuration" />

        <View
            android:id="@+id/view_aboveDestination"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/rating_inactive"
            app:layout_constraintTop_toBottomOf="@id/tv_priceRange" />

        <LinearLayout
            android:id="@+id/ll_destinations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/view_aboveDestination">

            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_startPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableStart="@drawable/green_oval"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dash_line"
                android:layout_marginStart="@dimen/_4sdp"/>

            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_endPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/_10sdp"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawableStart="@drawable/red_rectangle"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smaller_text_size" />
        </LinearLayout>

        <View
            android:id="@+id/view_belowDestination"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/rating_inactive"
            app:layout_constraintTop_toBottomOf="@id/ll_destinations" />

        <LinearLayout
            android:id="@+id/ll_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintTop_toBottomOf="@id/view_belowDestination"
            android:background="@color/rating_inactive"
            android:weightSum="2"
            >

            <cabuser.com.rydz.util.common.CustomFontTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/cancel_ride"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="0.2dp"
                android:background="@color/tab_background_unselected"
                android:textSize="@dimen/smaller_text_size" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>